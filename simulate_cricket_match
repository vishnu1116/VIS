        "import random11\n",
        "MILESTONES = [50, 100, 150, 200, 250, 300]\n",
        "def simulate_cricket_match(overs, players_per_team):\n",
        "    # Taking player names as input\n",
        "    print(\"\\nEnter names for Team 1 players:\")\n",
        "    team1_players = [input(f\"Player {i+1} Name: \") for i in range(players_per_team)]\n",
        "    print(\"\\nEnter names for Team 2 players:\")\n",
        "    team2_players = [input(f\"Player {i+1} Name: \") for i in range(players_per_team)]\n",
        "    def play_innings(team_name, players):\n",
        "        print(f\"\\nüèè {team_name} Batting...\")\n",
        "        team_score = 0\n",
        "        player_scores = {player: 0 for player in players}\n",
        "        wickets = 0\n",
        "        striker_index = 0\n",
        "        non_striker_index = 1 if players_per_team > 1 else 0\n",
        "        reached_team_milestones = set()\n",
        "        reached_player_milestones = {player: set() for player in players}\n",
        "        for over in range(overs):\n",
        "            print(f\"\\nOver {over+1} (6 Balls)\")\n",
        "            for ball in range(6):\n",
        "                if wickets >= players_per_team - 1:\n",
        "                    print(\"‚ö† All out! No more batsmen left.\")\n",
        "                    return team_score, player_scores\n",
        "                striker = players[striker_index]\n",
        "                while True:\n",
        "                    runs = input(f\"Ball {ball+1} - Runs by {striker} (0-6, 'w' for wicket, 'ro' for runout): \").strip().lower()\n",
        "\n",
        "                    if runs in {'w', 'ro'}:\n",
        "                        print(f\"‚ö† {striker} is OUT!\")\n",
        "                        wickets += 1\n",
        "                        if wickets < players_per_team - 1:\n",
        "                            striker_index = wickets\n",
        "                            non_striker_index = striker_index - 1 if striker_index > 0 else 0\n",
        "                        break\n",
        "                    elif runs.isdigit():\n",
        "                        runs = int(runs)\n",
        "                        if 0 <= runs <= 6:\n",
        "                            player_scores[striker] += runs\n",
        "                            team_score += runs\n",
        "                            for milestone in MILESTONES:\n",
        "                                if player_scores[striker] >= milestone and milestone not in reached_player_milestones[striker]:\n",
        "                                    print(f\"üéâ {striker} reaches {milestone} runs! üèèüëè\")\n",
        "                                    reached_player_milestones[striker].add(milestone)\n",
        "                            for milestone in MILESTONES:\n",
        "                                if team_score >= milestone and milestone not in reached_team_milestones:\n",
        "                                    print(f\"üî• {team_name} reaches {milestone} team runs! üéäüéâ\")\n",
        "                                    reached_team_milestones.add(milestone)\n",
        "                            if runs in {1, 3, 5}:\n",
        "                                striker_index, non_striker_index = non_striker_index, striker_index\n",
        "                            break\n",
        "                        else:\n",
        "                            print(\"Invalid input! Runs should be between 0 and 6.\")\n",
        "                    else:\n",
        "                        print(\"Invalid input! Enter a number (0-6), 'w' for wicket, or 'ro' for runout.\")\n",
        "            striker_index, non_striker_index = non_striker_index, striker_index\n",
        "            print(f\"End of Over {over+1} Score: {player_scores}\")\n",
        "        return team_score, player_scores\n",
        "    team1_score, team1_scores = play_innings(\"Team 1\", team1_players)\n",
        "    print(f\"\\nüîπ Team 1 Total Score: {team1_score} runs\")\n",
        "    team2_score, team2_scores = play_innings(\"Team 2\", team2_players)\n",
        "    print(f\"\\nüîπ Team 2 Total Score: {team2_score} runs\")\n",
        "    print(\"\\nüèÜ Match Result:\")\n",
        "    if team1_score > team2_score:\n",
        "        print(\"üèÜ Team 1 Wins!\")\n",
        "    elif team1_score < team2_score:\n",
        "        print(\"üèÜ Team 2 Wins!\")\n",
        "    else:\n",
        "        print(\"ü§ù Match Drawn!\")\n",
        "try:\n",
        "    overs = int(input(\"Enter the number of overs: \"))\n",
        "    players_per_team = int(input(\"Enter number of players per team: \"))\n",
        "\n",
        "    if overs > 0 and players_per_team > 1:\n",
        "        simulate_cricket_match(overs, players_per_team)\n",
        "    else:\n",
        "        print(\"Number of overs must be > 0 and at least 2 players needed.\")\n",
        "except ValueError:\n",
        "    print(\"Invalid input! Please enter numbers only.\")\n"
      ],
